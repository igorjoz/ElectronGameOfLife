{
  "name": "electron-game-of-life",
  "version": "1.0.0",
  "description": "Conway's Game of Life simulator with Electron and React",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "game-of-life",
    "cellular-automaton",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.gameoflife.app",
    "productName": "Game of Life",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ]
  }
}
